extends _base

block body
  .container.main
    .jumbotron
      h1 Backbone ORM
      p A paragraph
      .row
        .col-lg-6.col-md-6
          h2 Install
          pre
            code
              | npm install backbone-orm
        .col-lg-6.col-md-6
          h2 Get the client side JavaScript
          a.btn.btn-xl Download

    include _examples/_start

    .row
      .col-lg-12.col-md-12
        a.btn.btn-xs.language-toggle.pull-right
          span CoffeeScript
          i.glyphicon.glyphicon-random
    .row
      .col-lg-6.col-md-6
        include ../examples/example.md
      .col-lg-6.col-md-6
        div.example.coffeescript
          pre
            code.language-coffeescript
              include ../examples/example.coffee.txt
        div.example.javascript
          pre
            code.language-javascript
              include ../examples/example.js.txt


